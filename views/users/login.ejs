<% layout('layout/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center h-100">
    <div class="row w-100">
        <div class="col-md-12 col-lg-6 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Login</h5>
                    <form action="/users/login" method="POST" class="form-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Username can't be blank
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Password can't be blank
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember-me" name="remember-me">
                                <label class="form-check-label" for="remember-me">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-success w-100">Login</button>
                        <a class="btn w-100 text-light my-2" id="btn-login-google" href="/auth/google">
                            <i class="fa fa-google"></i> Login with Google
                        </a>
                        <a class="btn w-100 text-light" id="btn-login-fb" href="/auth/facebook">
                            <i class="fa fa-facebook-f"></i> Login with Facebook
                        </a>
                    </form>
                    <p class="text-center mt-3">Don't have an account? <a href="/users/register" class="text-decoration-none">Create an Account</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
